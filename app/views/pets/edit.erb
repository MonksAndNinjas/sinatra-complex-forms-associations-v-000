<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">

  <br></br>

  <label>Choose and existing owner:</label>

  <br></br>

  <%Owner.all.each do |pet|%>
    <input type="checkbox" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>"
    <%='checked' if @pet.owner.include?(pet_name) %>><%=pet.name%></input>
  <%end%>

  <input type="submit" value="Update Pet">
</form>
