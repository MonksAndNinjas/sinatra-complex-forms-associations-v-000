<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">

  <br></br>

  <label>Choose and existing owner:</label>

  <br></br>

  <%Owner.all.each do |pet|%>
    <input type="checkbox" name="owner[pet_ids][]" id="<%=owner.id%>" value="<%=owner.id%>"
    <%='checked' if @owner.pets.include?(pet) %>><%=pet.name%></input>
  <%end%>

  <input type="submit" value="Update Pet">
</form>
